postbuild() {
    # xcb comes with a ton of man3 manpages (9MB)
    # they are not used except by xcb developers
    rm -r "${pkg:?}"/share/man 2>/dev/null ||:
    rmdir "$pkg"/share 2>/dev/null ||:
}
