info='Modular text mode IRC client with Perl scripting'
version=1.2.1
source=https://github.com/$name/$name/releases/download/$version/$name-$version.tar.xz
deps='libgcrypt libressl glib'
sha256=5466a1ed9612cfa707d9a37d60b29d027b4ac7d83c74ceb1a410e2b59edba92c
build() {
    bonsai_configure --with-perl-staticlib --with-otr=static --disable-dependency-tracking
    bonsai_make
    bonsai_make install
}
